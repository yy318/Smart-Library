<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_winlab__layout"
    tools:context="com.example.azuracai.smartlibrary.Winlab_Layout">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="345dp"
        android:id="@+id/imageView"
        android:src="@drawable/winlab_large"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:layout_alignRight="@+id/save"
        android:layout_alignEnd="@+id/save"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="50dp"
        android:scaleType="fitXY"
        android:layout_alignParentEnd="false" />

    <Button
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="Refresh"
        android:id="@+id/load"
        android:background="#f40202"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:onClick="buttonLoad"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Availability:"
        android:id="@+id/seat"
        android:layout_toRightOf="@+id/load"
        android:layout_marginLeft="-10dp"
        android:layout_marginStart="-80dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/load" />

    <Button
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="PREFER"
        android:id="@+id/save"
        android:textColor="#fdfcfc"
        android:textSize="15dp"
        android:onClick="buttonSave"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/seat"
        android:layout_alignEnd="@+id/seat"
        android:layout_alignParentEnd="false"
        android:layout_toEndOf="@+id/winlab_Orbit"
        android:layout_toRightOf="@+id/winlab_Orbit"
        android:background="#f30202" />

    <Button
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:id="@+id/win_conf"
        android:layout_below="@+id/seat"
        android:layout_marginTop="195dp"
        android:layout_marginLeft="85dp"
        android:background="#00000000" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:id="@+id/winlab_Orbit"
        android:layout_below="@+id/seat"
        android:layout_toRightOf="@+id/load"
        android:layout_toEndOf="@+id/load"
        android:layout_marginTop="64dp"
        android:onClick="winlab_orbit"
        android:layout_marginLeft="-17dp"
        android:background="#00000000" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:id="@+id/availability"
        android:textSize="20dp"
        android:layout_alignTop="@+id/seat"
        android:layout_alignLeft="@+id/win_conf"
        android:layout_alignStart="@+id/win_conf"
        android:layout_marginLeft="15dp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="2F"
        android:id="@+id/secondF"
        android:layout_below="@+id/save"
        android:layout_alignLeft="@+id/win_conf"
        android:layout_alignStart="@+id/win_conf"
        android:background="@drawable/arrow_up"
        android:layout_marginLeft="26dp"
        android:paddingTop="15dp"
        android:textSize="12dp"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="37dp"
        android:id="@+id/winconf"
        android:src = "@drawable/winlab_conf"
        android:rotation="90"
        android:layout_alignTop="@+id/win_conf"
        android:layout_alignLeft="@+id/win_conf"
        android:layout_alignStart="@+id/win_conf"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="-10dp"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:adjustViewBounds="false" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:id="@+id/imageView2"
        android:src="@drawable/winlab_orbit"
        android:rotation="270"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignRight="@+id/secondF"
        android:layout_alignEnd="@+id/secondF"
        android:layout_marginRight="5dp"
        android:layout_marginTop="105dp" />

</RelativeLayout>
